sudo dnf update -y 
# Repos
# Epel
sudo dnf -y install epel-release
# Kubernetes
cat <<EOF | sudo tee /etc/yum.repos.d/kubernetes.repo
[kubernetes]
name=Kubernetes
baseurl=https://pkgs.k8s.io/core:/stable:/v1.32/rpm/
enabled=1
gpgcheck=1
gpgkey=https://pkgs.k8s.io/core:/stable:/v1.32/rpm/repodata/repomd.xml.key
# VS code repo. need to fix vs code install for updates, either snap or installing package manually
sudo rpm --import https://packages.microsoft.com/keys/microsoft.asc
echo -e "[code]\nname=Visual Studio Code\nbaseurl=https://packages.microsoft.com/yumrepos/vscode\nenabled=1\nautorefresh=1\ntype=rpm-md\ngpgcheck=1\ngpgkey=https://packages.microsoft.com/keys/microsoft.asc" | sudo tee /etc/yum.repos.d/vscode.repo > /dev/null

#Virt/Go/Snap
sudo dnf install -y cockpit-machines qemu-kvm libvirt virt-install virt-viewer go snapd
for drv in qemu network nodedev nwfilter secret storage interface; do systemctl start virt${drv}d{,-ro,-admin}.socket; done 
virt-host-validate 

#Kubernetes Tools/Cockpit/Flatpack/Podman Desktop/VS-Code Insiders (see VS Code repo line 10)
#Comment out certain sections to exclude specific packages
sudo yum install -y kubelet kubeadm kubectl flatpak
go install sigs.k8s.io/kind@v0.27.0 
sudo mv ~/go/bin/kind /bin && sudo rm -r ~/go 
curl -LO https://storage.googleapis.com/minikube/releases/latest/minikube-latest.x86_64.rpm
sudo rpm -Uvh minikube-latest.x86_64.rpm && sudo rm -r minikube-latest.x86_64.rpm
systemctl enable --now cockpit.socket snapd.socket grafana-server.service kubelet
flatpak remote-add --if-not-exists --user flathub https://flathub.org/repo/flathub.flatpakrepo
flatpak install --user flathub io.podman_desktop.PodmanDesktop 
flatpak update --user io.podman_desktop.PodmanDesktop 
# flatpak run io.podman_desktop.PodmanDesktop
# need to add compose to bin step before launching
sudo snap install code-insiders --classic




